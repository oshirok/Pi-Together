doctype html
html(ng-app = "piTogether")
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css")
		script(src='javascripts/decimal.js')
		script(src='https://code.jquery.com/jquery-2.1.4.js')
		script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.1/angular.min.js")
		script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.1/angular-animate.js")
		script(src="javascripts/ui-bootstrap-tpls-0.14.0.js")
		script(src="javascripts/core.js")
	body
		div(class="container" ng-controller="mainController")
			div(class="jumbotron text-center")
				h1 Pi Calculation
				p Welcome to #{title}
				uib-progressbar(class="progress-striped active" animate="true" value="currentJob.progress")
					b {{currentJob.progress}}%